# -----------------------------------------------------------------------------
# Dockerfile for running Rerun SDK version 0.22.1 with NVIDIA PyTorch base
# Includes necessary system dependencies for GUI and Vulkan support
# -----------------------------------------------------------------------------

FROM ubuntu:22.04

RUN apt-get update && apt-get install -y python3-pip libgtk-3-dev libxkbcommon-x11-0 vulkan-tools
RUN python3 -m pip install rerun-sdk==0.22.1
