/// If true, a scalar will be shown as individual point in a scatter plot.
struct ScalarScattering (
  "attr.python.aliases": "bool",
  "attr.python.array_aliases": "bool, npt.NDArray[np.bool]",
  "attr.rust.derive": "Copy, PartialEq, PartialOrd",
  order: 100
) {
  scattered: bool (order: 100);
}
