/// An Axis-Aligned Bounding Box in 2D space, implemented as the minimum and maximum corners.
struct AABB2D (
  "attr.rust.derive": "Default, Copy, PartialEq, bytemuck::Pod, bytemuck::Zeroable",
  "attr.rust.repr": "C"
) {
  /// The minimum bounds; usually left-top corner.
  min: rerun.datatypes.Vec2D (order: 100);

  /// The maximum bounds; usually right-bottom corner.
  max: rerun.datatypes.Vec2D (order: 200);
}
